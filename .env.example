# Example environment variables for deploying hmd
# Set these in your server environment (systemd unit, Docker, or hosting control panel)

# SECURITY - CHANGE THESE VALUES!
DJANGO_SECRET_KEY=your-super-secret-key-at-least-50-characters-long-and-random-123456789
DJANGO_DEBUG=False
ALLOWED_HOSTS=test3.hmdklusbedrijf.nl,hmdklusbedrijf.nl,www.hmdklusbedrijf.nl

# Optional production security toggles (default True when DEBUG=False)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Email (configure for your SMTP provider)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=you@example.com
EMAIL_HOST_PASSWORD=supersecret
DEFAULT_FROM_EMAIL=noreply@hmdklusbedrijf.nl

# Optional: path to external admin assets
# ADMIN_ASSETS_DIR=/opt/admin_assets

# AI Integration
OPENAI_API_KEY=sk-your-openai-api-key-here
MAGICAI_URL=https://tools.justcodeworks.eu
MAGICAI_API_KEY=your-magicai-api-key-here
